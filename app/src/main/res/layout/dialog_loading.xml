<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_loading_layout_padding">

    <ProgressBar
        android:id="@+id/dialog_loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="@dimen/dialog_loading_text_view_margin_start_end"
        android:layout_marginEnd="@dimen/dialog_loading_text_view_margin_start_end"
        android:text="@string/dialog_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:theme="@style/DefaultTextSize16"

        android:layout_toEndOf="@+id/dialog_loading_progress_bar"
        android:layout_alignBottom="@+id/dialog_loading_progress_bar"
        android:layout_alignTop="@+id/dialog_loading_progress_bar" />

</RelativeLayout>