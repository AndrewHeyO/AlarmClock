<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/item_news_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/item_news_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_news_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/item_news_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/DefaultTextSize12"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"

                tools:text="Category"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/item_news_logo" />

            <TextView
                android:id="@+id/item_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/DefaultTextSize16"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"

                tools:text="Title"
                android:layout_below="@+id/item_news_category"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/item_news_logo" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_news_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/DefaultTextSize12"
            android:layout_marginBottom="8dp"

            tools:text="Description" />

    </LinearLayout>

</android.support.v7.widget.CardView>