<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_rss_list_layout_margin_bottom">

        <TextView
            android:id="@+id/item_rss_list_rss_text_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:theme="@style/DefaultTextSize16"

            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/item_rss_list_delete_button" />

        <ImageButton
            android:id="@+id/item_rss_list_delete_button"
            app:srcCompat="@drawable/ic_item_rss_list_clear"
            android:background="?android:selectableItemBackground"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="@dimen/item_rss_list_delete_button_margin_bottom"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:id="@+id/item_dialog_settings_news_separator"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/separator_margin_start_end"
        android:layout_marginStart="@dimen/separator_margin_start_end"
        android:layout_marginBottom="@dimen/item_rss_list_separator_margin_bottom"
        android:background="@color/separator"/>

</LinearLayout>